<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qreplyMapper">

	<!-- 
	게시물에서 댓글은 어떤 특정 게시물에 종속되어있는 형태로 게시물을 구분할 수 있어야 한다.
	게시물 구분에 필요한 글번호(qbno),댓글 구분에 필요한 댓글번호(qrno)가 있다.
	또한 작성자와 내용,작성일자가 필요하다.
	
	댓글은 게시물이 있어야 작성 가능하므로 댓글 테이블에 있는 qbno값을 추가하는 게 아니라 
	기존에 있던 게시판 테이블에 있는 qbno를 따라가야한다.그래서 이것을 참조하기 위한 foreign key를 사용한다.
	참조하는 테이블(Q_BOARD)에 값이 없을 경우 에러를 발생시킨다.
	 -->

	<!-- 댓글 조회 -->
	<select id="readReply" resultType="com.waffle.vo.QReplyVO">
    	SELECT
    	QRNO, QCONTENT, QWRITER, REGDATE
    	FROM Q_REPLY
    	WHERE QBNO = #{qbno}
	</select>
	
<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="com.waffle.vo.QReplyVO">
		UPDATE Q_REPLY SET QCONTENT = #{qcontent}
		WHERE QRNO = #{qrno}
	</update>

<!-- 댓글 삭제 -->
	<delete id="deleteReply" parameterType="com.waffle.vo.QReplyVO">
		DELETE FROM Q_REPLY
		WHERE QRNO = #{qrno}
	</delete>
	
<!-- 선택된 댓글 조회 -->
	<select id="selectReply" resultType="com.waffle.vo.QReplyVO">
		SELECT
				QBNO
			  , QRNO
			  , QCONTENT
			  , QWRITER
			  , REGDATE
		  FROM Q_REPLY
		 WHERE QRNO = #{qrno}
	</select>
	
		<insert id="writeReply">
		INSERT INTO Q_REPLY(
			QBNO
			, QRNO
			, QCONTENT
			, QWRITER
		)
		VALUES(    #{qbno}
			, Q_REPLY_SEQ.NEXTVAL
			, #{qcontent}
			, #{qwriter}	)
		</insert>
  

</mapper>